    <style name="spinner_button_style" parent="@style/spinner_base">
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_four</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dropdown_button_text_blue</item>
    </style>
